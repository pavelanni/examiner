# Replace examiner.example.com with your domain.
# Caddy automatically provisions TLS via Let's Encrypt.

examiner.example.com {
	redir /ru /ru/ permanent

	handle /ru/* {
		reverse_proxy localhost:8081
	}

	handle {
		reverse_proxy localhost:8080
	}

	log {
		output file /var/log/caddy/examiner-access.log
	}
}
